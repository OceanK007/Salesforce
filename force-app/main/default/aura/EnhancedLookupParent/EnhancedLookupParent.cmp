<aura:component access="global" implements="flexipage:availableForAllPageTypes,force:hasRecordId">
    <aura:attribute name="recordId" type="String" description="To hold the record id on particular record " />
	<aura:attribute name="sObject" type="Object" description="Object to hold record data"/>
    <aura:attribute name="setupObject" type="Object" description="Object to hold setup data for enhanced lookup"/>
    
    <aura:handler name="init" value="{!this}" action="{!c.doInit}" description="Handling init event to fetch details of object"/>
    
    <lightning:card title="Enhanced Lookup">
        <div class="slds-p-around_medium slds-p-top_none slds-p-bottom_xxx-small">
            <lightning:recordEditForm recordId="{!v.recordId}" objectApiName="{!v.objectAPI}">
                <c:EnhancedLookup recordId="{!v.recordId}"
                                  sObject="{!v.sObject}"
                                  setupObject="{!v.setupObject}"/>
            </lightning:recordEditForm>
        </div>
    </lightning:card>
</aura:component>